<Alloy>
	<View id="Wrapper">
		<Require type="widget" src="com.chariti.navigationBar" id="NavigationBar" image="logo.png" />
		
		<ScrollView id="content">
			<TableView height="90dp">
				<TableViewRow id="terms" title="Terms of Service" hasChild="true" />
				<TableViewRow id="privacy" title="Privacy Policy" hasChild="true" />
			</TableView>
			
			<TableView height="45dp">
				<TableViewRow id="logs" title="Send Application Logs" hasChild="true" />
			</TableView>
			
			<Label id="version" />
			<Label id="copyright" />
			
			<TableView height="45dp">
				<TableViewRow id="acknowledgements" title="Acknowledgements" hasChild="true" />
			</TableView>
			
			<Label text="This application was created using the open source ChariTi framework, freely available at:\nhttp://github.com/mcongrove/ChariTi\nChariTi ‌© 2012 Matthew Congrove" />
		</ScrollView>
	</View>
</Alloy>